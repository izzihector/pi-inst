<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="pivotino_product_variant_easy_edit_view" model="ir.ui.view">
            <field name="name">pivotino.product.product.view.form.easy</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="name" readonly="1" placeholder="e.g. Pivotino Subscription"/>
                </xpath>
            </field>
    </record>

</odoo>
