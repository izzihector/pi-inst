<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form_inherit_hide_about" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hide.about</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='about']" position="replace">

                </xpath>

                <xpath expr="//label[@for='module_pad']/following::div" position="replace">
                    <div class="text-muted">
                        Use external pads in Pivotino Notes
                    </div>
                </xpath>

                <xpath expr="//label[@for='module_google_spreadsheet']/following::div" position="replace">
                    <div class="text-muted">
                        Extract and analyze Pivotino data from Google Spreadsheet
                    </div>
                </xpath>
            </field>
        </record>

</odoo>
