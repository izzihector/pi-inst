<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--    Lost Reason Wizard Form View    -->
    <record id="crm_lead_lost_quotation_form" model="ir.ui.view">
        <field name="name">crm.lead.lost.quotation.form</field>
        <field name="model">crm.lead.lost.quotation</field>
        <field name="arch" type="xml">
            <form string="Lost Reason">
                <span>You have to provide a Lost Reason for the Lead which is related to this Quotation.</span>
                <group class="oe_title">
                    <field name="lost_reason_id"/>
                </group>
                <footer>
                    <button name="action_lost_reason_quotation_reply" string="Submit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>